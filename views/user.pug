extends base
include _post

mixin statsItem(num,desc)
  li.stats__li
    span.stats__num= num
    p.stats__desc=desc

mixin imgItem(id,src,likesQuantity,commentsQuantity)
  li.post-list__li
    img.post-list__img.box-shadow(src=`${src}`,alt='post image',data-id=`${id}`)
    //- .post-list__stats-wrap
      .post-list__likes.post-list__likes--like=likesQuantity
      .post-list__likes.post-list__likes--comment=commentsQuantity


block content
  - const followStats=[{num:10,desc:'test'},{num:10,desc:'test'},{num:10,desc:'test'},]

  main.main.section.section-me.me
    .me__img-wrap
      img.me__img.box-shadow(src="https://upload.wikimedia.org/wikipedia/commons/a/a0/Pierre-Person.jpg", alt="user image")
    h1.section__header.me__header=user.name
    p.section__subtext=user.description

    ul.me__stats.stats.box-shadow
      each element in stats
        +statsItem(element.num,element.desc)
      //- if isMe == false
    button.section__button.section__button--background.me__follow-btn Follow

    ul.me__post-list.post-list
      each post in posts
        //- +imgItem(post.id,post.image,post.likesQuantity,post.commentsQuantity)
        +postItem(post)

