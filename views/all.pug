extends base

mixin imgItem(id,src)
    li.all_post.post
        img.post__img.box-shadow(src=`${src}`,alt='post image',data-id=`${id}`)
    //- .post-list__stats-wrap
      .post-list__likes.post-list__likes--like=likesQuantity
      .post-list__likes.post-list__likes--comment=commentsQuantity


block content
    min.main.section.all
        ul.all__posts-list
            each post in posts
                +imgItem(post.id,post.image)