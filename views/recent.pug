extends base
include _post

block content

  main.main.section.recent
    .recent__search-wrap
      input.recent__search#search-user-input(type="text",placeholder='type user nick...')
      button.section__button.section__button--background.recent__search-btn#search-user-btn search
    ul.recent__posts-list
      each post in posts
        +postItem(post)
